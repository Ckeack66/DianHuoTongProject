<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhky.yaolinwang.order.fragment.CustomerOrdersFragment2">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_customer_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_task_title_bar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_customer_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"></android.support.v7.widget.RecyclerView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</FrameLayout>
