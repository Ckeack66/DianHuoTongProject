<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.mhky.dianhuotong.activity.CreatShopActivity">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/creatshop_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />
    <RelativeLayout
        android:id="@+id/create_shop_txt3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x49"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15">

        <EditText
            android:id="@+id/create_shop_compenay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/create_shop_txt3"
            android:maxLines="1"
            android:textColor="@color/color333333"
            android:textColorHint="@color/colorBFBFBF"
            android:textSize="@dimen/t14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/colorCDCDCD" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x49"
        android:layout_marginStart="@dimen/x15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="店铺类型选择"
            android:textColor="@color/colorBFBFBF"
            android:textSize="@dimen/t14" />

        <RadioGroup
            android:id="@+id/create_group"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <RadioButton
                android:id="@+id/create_shop_type1"
                android:layout_width="@dimen/x56"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@drawable/selector_personinfo_radiobutton"
                android:paddingStart="@dimen/x3"
                android:text="药店"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <RadioButton
                android:id="@+id/create_shop_type2"
                android:layout_width="@dimen/x56"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/x16"
                android:button="@drawable/selector_personinfo_radiobutton"
                android:paddingStart="@dimen/x3"
                android:text="超市"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <RadioButton
                android:id="@+id/create_shop_type3"
                android:layout_width="@dimen/x56"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/x16"
                android:button="@drawable/selector_personinfo_radiobutton"
                android:paddingStart="@dimen/x3"
                android:text="诊所"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/colorCDCDCD" />
    <RelativeLayout
        android:id="@+id/create_shop_txt1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x49"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15">

        <TextView
            android:id="@+id/create_shop_txt1_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/create_shop_txt1"
            android:textColor="@color/colorBFBFBF"
            android:textSize="@dimen/t14" />

        <TextView
            android:id="@+id/create_shop_txt1_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x6"
            android:layout_toEndOf="@id/create_shop_txt1_1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color333333"
            android:textSize="@dimen/t14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_go_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/colorCDCDCD" />

    <RelativeLayout
        android:id="@+id/create_shop_txt2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x49"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15">

        <TextView
            android:id="@+id/create_shop_txt2_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/create_shop_txt2"
            android:textColor="@color/colorBFBFBF"
            android:textSize="@dimen/t14" />

        <TextView
            android:id="@+id/create_shop_txt2_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x6"
            android:layout_toEndOf="@id/create_shop_txt2_1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color333333"
            android:textSize="@dimen/t9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_go_grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/colorCDCDCD" />

    <RelativeLayout
        android:id="@+id/create_shop_txt4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x49"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15">

        <EditText
            android:id="@+id/create_shop_compenay_adress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/create_shop_txt4"
            android:maxLines="1"
            android:textColor="@color/color333333"
            android:textColorHint="@color/colorBFBFBF"
            android:textSize="@dimen/t14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/colorCDCDCD" />

    <TextView
        android:id="@+id/creatshop_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x33"
        android:layout_marginEnd="@dimen/x50"
        android:layout_marginStart="@dimen/x50"
        android:layout_marginTop="@dimen/x100"
        android:background="@drawable/shape_login_button"
        android:gravity="center"
        android:text="@string/create_shop_txt5"
        android:textSize="@dimen/t12" />
</LinearLayout>
