<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF7F7F7"
    tools:context="com.mhky.dianhuotong.shop.fragment.ShopTransferFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF7F7F7"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <View
                android:id="@+id/shop_ttransfer_info_title"
                android:layout_width="@dimen/x4"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@color/colorB23700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:layout_toEndOf="@id/shop_ttransfer_info_title"
                android:text="商家介绍"
                android:textColor="@color/colorB23700" />

        </RelativeLayout>

        <TextView
            android:id="@+id/shop_transfer_intruduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:lineSpacingMultiplier="1.4"
            android:paddingBottom="@dimen/x4"
            android:paddingEnd="@dimen/x10"
            android:paddingStart="@dimen/x10"
            android:paddingTop="@dimen/x4"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t10" />

        <RelativeLayout
            android:id="@+id/shop_transfer_gocard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shop_ttransfer_info_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:src="@drawable/icon_code" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:layout_toEndOf="@id/shop_ttransfer_info_code"
                android:text="点击查看名片"
                android:textColor="@color/color333333" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x12"
                android:src="@drawable/icon_go_grey" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <View
                android:id="@+id/shop_ttransfer_info_title1"
                android:layout_width="@dimen/x4"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@color/colorB23700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:layout_toEndOf="@id/shop_ttransfer_info_title1"
                android:text="配送方式"
                android:textColor="@color/colorB23700" />


        </RelativeLayout>

        <TextView
            android:id="@+id/shop_transfer_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:lineSpacingMultiplier="1.4"
            android:paddingBottom="@dimen/x4"
            android:paddingEnd="@dimen/x10"
            android:paddingStart="@dimen/x10"
            android:paddingTop="@dimen/x4"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t10" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <View
                android:id="@+id/shop_ttransfer_info_title2"
                android:layout_width="@dimen/x4"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@color/colorB23700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:layout_toEndOf="@id/shop_ttransfer_info_title2"
                android:text="开户流程"
                android:textColor="@color/colorB23700" />
        </RelativeLayout>

        <TextView
            android:id="@+id/shop_transfer_openexplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingStart="@dimen/x10"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:paddingStart="@dimen/x14"
            android:paddingTop="@dimen/x10"
            android:text="开户说明"
            android:textColor="@color/colorB23700"
            android:textSize="@dimen/t14" />

        <TextView
            android:id="@+id/shop_transfer_openexplain_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:lineSpacingMultiplier="1.4"
            android:paddingBottom="@dimen/x4"
            android:paddingEnd="@dimen/x10"
            android:paddingStart="@dimen/x14"
            android:paddingTop="@dimen/x8"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <View
                android:id="@+id/shop_ttransfer_info_title3"
                android:layout_width="@dimen/x4"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@color/colorB23700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:layout_toEndOf="@id/shop_ttransfer_info_title3"
                android:text="售后相关"
                android:textColor="@color/colorB23700" />
        </RelativeLayout>

        <TextView
            android:id="@+id/shop_transfer_sel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:lineSpacingMultiplier="1.4"
            android:paddingBottom="@dimen/x4"
            android:paddingEnd="@dimen/x10"
            android:paddingStart="@dimen/x10"
            android:paddingTop="@dimen/x4"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <View
                android:id="@+id/shop_ttransfer_info_title4"
                android:layout_width="@dimen/x4"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@color/colorB23700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:layout_toEndOf="@id/shop_ttransfer_info_title4"
                android:text="相关证件"
                android:textColor="@color/colorB23700" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shop_transfer_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/colorWhite"
            android:paddingBottom="@dimen/x16"
            android:layout_marginBottom="@dimen/x6"/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
