<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mhky.yaolinwang.activity.YaoLinWangActivity">

    <RelativeLayout
        android:id="@+id/rl_yaolinwang_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/yaolinwang_main_bg">

        <View
            android:id="@+id/status_bar_v"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorTransp" />

        <com.mhky.dianhuotong.shop.custom.DianHuoTongShopTitleBar
            android:id="@+id/yaolinwang_top_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_below="@+id/status_bar_v"></com.mhky.dianhuotong.shop.custom.DianHuoTongShopTitleBar>

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/yaolinwang_main_banner"
            style="@style/BannerDefaultStyle"
            android:background="@color/colorTransp"
            app:banner_numberIndicatorBackground="@color/colorTransp"
            app:banner_numberIndicatorTextColor="@color/colorTransp"
            app:banner_pointDrawable="@drawable/selector_banner_unequal"
            app:banner_transitionEffect="accordion"
            android:layout_below="@+id/yaolinwang_top_title"/>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_dianhuotong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/rl_yaolinwang_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_yaolinwang_main_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x106"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/tv_drug_zone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorTransp"
                    android:drawablePadding="@dimen/x6"
                    android:drawableTop="@drawable/drug_zone"
                    android:gravity="center"
                    android:text="药品专区"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:id="@+id/tv_medical_machine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorTransp"
                    android:drawablePadding="@dimen/x6"
                    android:drawableTop="@drawable/medical_machine"
                    android:gravity="center"
                    android:text="医疗器械"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:id="@+id/tv_adult_products"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorTransp"
                    android:drawablePadding="@dimen/x6"
                    android:drawableTop="@drawable/adult_products"
                    android:gravity="center"
                    android:text="成人用品"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:id="@+id/tv_health_food"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorTransp"
                    android:drawablePadding="@dimen/x6"
                    android:drawableTop="@drawable/health_food"
                    android:gravity="center"
                    android:text="保健食品"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:id="@+id/tv_ch_medical_drink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorTransp"
                    android:drawablePadding="@dimen/x6"
                    android:drawableTop="@drawable/ch_medical_drink"
                    android:gravity="center"
                    android:text="中药饮品"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康专区"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t15"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x16"
                android:layout_below="@+id/ll_yaolinwang_main_btn"/>

            <LinearLayout
                android:id="@+id/ll_favorable_zone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x200"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_title1"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginBottom="@dimen/x20">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@drawable/favorable_bg1"
                    android:padding="@dimen/x7">

                    <TextView
                        android:id="@+id/tv_favorable_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x13"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/color333333"
                        android:text="商品名称"
                        android:layout_marginTop="@dimen/x6"/>

                    <TextView
                        android:id="@+id/tv_favorable_new_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x13"
                        android:layout_below="@+id/tv_favorable_title1"
                        android:textColor="@color/colorE20F12"
                        android:text="¥ 0.00"
                        android:layout_marginTop="@dimen/x16"/>

                    <TextView
                        android:id="@+id/tv_favorable_old_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_favorable_new_price1"
                        android:layout_toRightOf="@id/tv_favorable_new_price1"
                        android:layout_marginLeft="@dimen/x6"
                        android:textSize="@dimen/x10"
                        android:textColor="@color/color767676"
                        android:text="0.00"/>

                    <ImageView
                        android:id="@+id/iv_favorable_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv_favorable_new_price1"
                        android:layout_marginTop="@dimen/x16"
                        android:src="@drawable/default_pill_case"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/x7">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/x7"
                        android:background="@drawable/favorable_bg2"
                        android:padding="@dimen/x7">

                        <RelativeLayout
                            android:id="@+id/rl_favorable_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true">

                            <TextView
                                android:id="@+id/tv_favorable_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/x13"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/color333333"
                                android:text="商品名称"
                                android:layout_marginTop="@dimen/x6"/>

                            <TextView
                                android:id="@+id/tv_favorable_new_price2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/x13"
                                android:layout_below="@+id/tv_favorable_title2"
                                android:textColor="@color/colorE20F12"
                                android:text="¥ 0.00"
                                android:layout_marginTop="@dimen/x16"/>

                            <TextView
                                android:id="@+id/tv_favorable_old_price2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/tv_favorable_new_price2"
                                android:layout_toRightOf="@id/tv_favorable_new_price2"
                                android:layout_marginLeft="@dimen/x6"
                                android:textSize="@dimen/x10"
                                android:textColor="@color/color767676"
                                android:text="0.00" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_favorable_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@id/rl_favorable_2"
                            android:layout_marginLeft="@dimen/x16"
                            android:src="@drawable/default_pill_case" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/favorable_bg3"
                        android:padding="@dimen/x7">

                        <RelativeLayout
                            android:id="@+id/rl_favorable_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/tv_favorable_title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/x13"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/color333333"
                                android:text="商品名称"
                                android:layout_marginTop="@dimen/x6"/>

                            <TextView
                                android:id="@+id/tv_favorable_new_price3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/x13"
                                android:layout_below="@+id/tv_favorable_title3"
                                android:textColor="@color/colorE20F12"
                                android:text="¥ 0.00"
                                android:layout_marginTop="@dimen/x16"/>

                            <TextView
                                android:id="@+id/tv_favorable_old_price3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/tv_favorable_new_price3"
                                android:layout_toRightOf="@id/tv_favorable_new_price3"
                                android:layout_marginLeft="@dimen/x6"
                                android:textSize="@dimen/x10"
                                android:textColor="@color/color767676"
                                android:text="0.00" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_favorable_3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@id/rl_favorable_3"
                            android:layout_marginRight="@dimen/x16"
                            android:src="@drawable/default_pill_case"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康邻居"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t15"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x16"
                android:layout_below="@+id/ll_favorable_zone"/>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/srl_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title2"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginBottom="@dimen/x16">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/shop_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            <com.mhky.yaolinwang.customview.CustomRatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/srl_shop"
                app:starSize="20dp"
                app:starCount="5"
                app:starSpace="10dp"
                app:starStrokeWidth="1dp"
                app:starCanTouch="true"
                app:starMaxProgress="100"
                app:starProgress="0"
                app:starShowStroke="true"
                app:starCoverColor="@color/colorE98F36"
                app:starFillColor="#666666"
                app:starStrokeColor="@color/colorE98F36"
                android:layout_marginBottom="@dimen/x30"
                android:visibility="gone"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
