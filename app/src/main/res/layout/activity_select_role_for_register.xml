<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectRoleForRegisterActivity"
    android:background="@color/white">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/select_register_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"></com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar>

    <TextView
        android:id="@+id/tv_role_select1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_register_title_bar"
        android:layout_marginTop="@dimen/x76"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        android:gravity="center"
        android:padding="@dimen/x16"
        android:text="诊所/药店/超市"
        android:textSize="@dimen/t18"
        android:textColor="@color/white"
        android:background="@drawable/select_bg2"/>

    <TextView
        android:id="@+id/tv_role_select2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_role_select1"
        android:layout_marginTop="@dimen/x50"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        android:gravity="center"
        android:padding="@dimen/x16"
        android:text="终端消费者"
        android:textSize="@dimen/t18"
        android:textColor="@color/white"
        android:background="@drawable/select_bg1"/>

</RelativeLayout>