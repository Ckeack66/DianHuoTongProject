<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.mhky.dianhuotong.activity.ShiYaoQianYanActivity">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/mianze_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mianze_txt_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x26"
                android:layout_marginTop="@dimen/x4"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x4"
                    android:layout_height="match_parent"
                    android:background="@color/colorB23700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/x10"
                    android:text="@string/mianze_title"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t16" />
            </LinearLayout>

            <com.tencent.smtt.sdk.WebView
                android:id="@+id/mz_webview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>