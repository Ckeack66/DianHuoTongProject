    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/shop_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/shop_scollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorF7F7F7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- TODO: Update blank fragment layout -->
                <LinearLayout
                    android:id="@+id/ll_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x100"
                        android:background="@color/colorWhite">

                        <ImageView
                            android:id="@+id/shop_img"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/x60"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x16"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_shop_good_shopimg" />

                        <TextView
                            android:id="@+id/shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x14"
                            android:layout_toEndOf="@id/shop_img"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t14"
                            android:layout_marginEnd="@dimen/x60"/>
                        <TextView
                            android:id="@+id/shop_star"
                            android:layout_width="@dimen/x50"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:paddingStart="@dimen/x6"
                            android:paddingEnd="@dimen/x6"
                            android:paddingTop="@dimen/x2"
                            android:paddingBottom="@dimen/x2"
                            android:textSize="@dimen/t10"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/x6"
                            android:background="@drawable/shape_start"
                            android:layout_marginEnd="@dimen/x6"/>

                        <TextView
                            android:id="@+id/shop_transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/shop_name"
                            android:layout_below="@id/shop_name"
                            android:layout_marginTop="@dimen/x10"
                            android:background="@drawable/shape_shop_transfer"
                            android:paddingBottom="@dimen/x2"
                            android:paddingEnd="@dimen/x4"
                            android:paddingStart="@dimen/x4"
                            android:paddingTop="@dimen/x2"
                            android:text=""
                            android:textColor="@color/colorB23700"
                            android:textSize="@dimen/t8" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40"
                        android:layout_marginTop="@dimen/x6"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/shop_info_title"
                            android:layout_width="@dimen/x4"
                            android:layout_height="@dimen/x16"
                            android:layout_centerVertical="true"
                            android:background="@color/colorB23700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/x14"
                            android:layout_toEndOf="@id/shop_info_title"
                            android:text="商家公告"
                            android:textColor="@color/colorB23700" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/shop_notoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:lineSpacingMultiplier="1.4"
                        android:paddingBottom="@dimen/x12"
                        android:paddingEnd="@dimen/x6"
                        android:paddingStart="@dimen/x6"
                        android:paddingTop="@dimen/x6"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t10" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40"
                        android:layout_marginTop="@dimen/x6"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/shop_main_child_tab1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/shop_main_tab_txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="默认分类"
                                android:textColor="@color/color333333"
                                android:textSize="@dimen/t12" />

                            <ImageView
                                android:id="@+id/shop_main_tab_img1"
                                android:layout_width="@dimen/x9"
                                android:layout_height="@dimen/x6"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/x6"
                                android:layout_toEndOf="@id/shop_main_tab_txt1"
                                android:src="@drawable/icon_choose_unselecte" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/shop_main_child_tab2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/shop_main_tab_txt2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="默认排序"
                                android:textColor="@color/color333333"
                                android:textSize="@dimen/t12" />

                            <ImageView
                                android:id="@+id/shop_main_tab_img2"
                                android:layout_width="@dimen/x9"
                                android:layout_height="@dimen/x6"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/x6"
                                android:layout_toEndOf="@id/shop_main_tab_txt2"
                                android:src="@drawable/icon_choose_unselecte" />

                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:background="@color/colorF7F7F7" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/shop_main_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</RelativeLayout>
