<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF7F7F7"
    tools:context="com.mhky.dianhuotong.shop.fragment.ShopMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/shop_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x16"
                android:src="@drawable/icon_shop_good_shopimg" />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:layout_toEndOf="@id/shop_img"
                android:text="山东惠民大药房"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/shop_name"
                android:layout_below="@id/shop_name"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/shape_shop_transfer"
                android:paddingBottom="@dimen/x2"
                android:paddingEnd="@dimen/x4"
                android:paddingStart="@dimen/x4"
                android:paddingTop="@dimen/x2"
                android:text="500元起配"
                android:textColor="@color/colorB23700"
                android:textSize="@dimen/t8" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <View
                android:id="@+id/shop_info_title"
                android:layout_width="@dimen/x4"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@color/colorB23700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x14"
                android:layout_toEndOf="@id/shop_info_title"
                android:text="商家公告"
                android:textColor="@color/colorB23700" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x12"
                android:src="@drawable/icon_go" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:lineSpacingMultiplier="1.4"
            android:paddingBottom="@dimen/x12"
            android:paddingEnd="@dimen/x6"
            android:paddingStart="@dimen/x6"
            android:paddingTop="@dimen/x6"
            android:text="@string/shop_bra"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x6">

            <RelativeLayout
                android:id="@+id/shop_main_child_tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/shop_main_tab_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="默认分类"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <ImageView
                    android:id="@+id/shop_main_tab_img1"
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/x6"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x6"
                    android:layout_toEndOf="@id/shop_main_tab_txt1"
                    android:src="@drawable/icon_choose_unselecte" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_main_child_tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/shop_main_tab_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="默认排序"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <ImageView
                    android:id="@+id/shop_main_tab_img2"
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/x6"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x6"
                    android:layout_toEndOf="@id/shop_main_tab_txt2"
                    android:src="@drawable/icon_choose_unselecte" />

            </RelativeLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/shop_main_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</ScrollView>
