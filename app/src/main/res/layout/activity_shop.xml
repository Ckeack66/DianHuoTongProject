<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF7F7F7"
    tools:context="com.mhky.dianhuotong.shop.activity.ShopActivity">

    <com.mhky.dianhuotong.shop.custom.DianHuoTongShopTitleBar
        android:id="@+id/shop_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <FrameLayout
        android:id="@+id/shop_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginTop="@dimen/x40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:id="@+id/shop_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/shop_main_tab1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="商家首页"
                android:textColor="@color/color04c1ab"
                android:textSize="@dimen/t12" />

            <View
                android:id="@+id/shop_main_tab11"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x4"
                android:layout_alignEnd="@id/shop_main_tab1"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/shop_main_tab1"
                android:background="@color/color04c1ab" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/shop_main_tab2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="全部商品"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <View
                android:id="@+id/shop_main_tab21"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x4"
                android:layout_alignEnd="@id/shop_main_tab2"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/shop_main_tab2"
                android:background="@color/color04c1ab"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/shop_main_tab3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="开户配送"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <View
                android:id="@+id/shop_main_tab31"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x4"
                android:layout_alignEnd="@id/shop_main_tab3"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/shop_main_tab3"
                android:background="@color/color04c1ab"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
