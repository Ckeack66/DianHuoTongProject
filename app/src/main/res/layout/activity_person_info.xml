<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloreeeeee"
    android:orientation="vertical">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/personinfo_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/person_header"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/person_info_image"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_person_header"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFffffff"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/colorCDCDCD" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/person_username"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/person_info_realname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/colorCDCDCD" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/person_username_internet"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/person_info_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x9"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x49"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:text="@string/person_shop_name"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/person_info_shopname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/colorCDCDCD" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x49"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/person_work"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/person_info_work"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/colorCDCDCD" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x49"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/person_phone"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/person_info_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/person_info_go_starcompany"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x49"
        android:paddingStart="@dimen/x15"
        android:paddingEnd="@dimen/x15"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="关注商家"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_go_grey"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/colorCDCDCD" />
    <RelativeLayout
        android:id="@+id/person_info_go_promote"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x49"
        android:paddingStart="@dimen/x15"
        android:paddingEnd="@dimen/x15"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的推广码"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_go_grey"/>
    </RelativeLayout>
</LinearLayout>
