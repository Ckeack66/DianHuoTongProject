<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mhky.dianhuotong.shop.activity.SearchGoodsActivity">

    <com.mhky.dianhuotong.shop.custom.DianHuoTongShopTitleBar
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/goods_base_choose_tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/goods_base_choose_txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/x6"
                        android:gravity="center"
                        android:text="默认分类"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t12" />

                    <ImageView
                        android:id="@+id/goods_base_choose_img1"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x6"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_choose_unselecte" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/goods_base_choose_tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/goods_base_choose_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="默认排序"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <ImageView
                    android:id="@+id/goods_base_choose_img2"
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/x6"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x6"
                    android:layout_toEndOf="@id/goods_base_choose_txt2"
                    android:src="@drawable/icon_choose_unselecte" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/goods_base_choose_tab3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/goods_base_choose_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="全部商家"
                    android:textColor="@color/color333333"
                    android:maxLength="5"
                    android:ellipsize="end"
                    android:textSize="@dimen/t12" />

                <ImageView
                    android:id="@+id/goods_base_choose_img3"
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/x6"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x6"
                    android:layout_toEndOf="@id/goods_base_choose_txt3"
                    android:src="@drawable/icon_choose_unselecte" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/goods_base_choose_tab4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/goods_base_choose_txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="筛选"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <ImageView
                    android:id="@+id/goods_base_choose_img4"
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x12"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x6"
                    android:layout_toEndOf="@id/goods_base_choose_txt4"
                    android:src="@drawable/icon_choose_selected" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBFBFBF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x0.5"
            android:background="@color/colorBFBFBF" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/goods_base_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_recyclelistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorF7F7F7" />

            <RelativeLayout
                android:id="@+id/base_tips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="没有搜索到任何内容哦"
                    android:textColor="@color/color333333" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/search_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/x30"
                    android:src="@drawable/icon_nothing" />
            </RelativeLayout>
        </FrameLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
