<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mhky.dianhuotong.activity.ShiYaoQianYanActivity">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/mywaiter_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x64" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x38"
        android:background="@drawable/icon_waiter_background">

        <ImageView
            android:id="@+id/mywaiter_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:background="@color/colorTransp"
            android:scaleType="center"
            android:src="@drawable/image_waiter_test" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mywaiter_image"
            android:layout_marginLeft="@dimen/x52"
            android:layout_marginRight="@dimen/x52"
            android:layout_marginTop="@dimen/x40"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransp"
                    android:text="@string/mywaiter_text1"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransp"
                    android:text="李荣浩"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x7"
                android:background="@color/colord9d9d9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x33">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransp"
                    android:text="@string/mywaiter_text2"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransp"
                    android:text="158 9036 2768"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12"
                    android:autoLink="phone"
                    android:textColorLink="@color/color04c1ab"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x7"
                android:background="@color/colord9d9d9" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x33">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransp"
                    android:text="@string/mywaiter_text3"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransp"
                    android:text="山东省济南市槐荫区"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x7"
                android:background="@color/colord9d9d9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x33">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransp"
                    android:text="@string/mywaiter_text4"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransp"
                    android:text="黎明"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x7"
                android:background="@color/colord9d9d9" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>