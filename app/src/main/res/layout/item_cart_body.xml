<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginEnd="@dimen/x14"
        android:layout_marginStart="@dimen/x14"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/goods_base_imageview"
            android:layout_width="@dimen/x84"
            android:layout_height="@dimen/x84"
            android:layout_marginTop="@dimen/x14"
            android:src="@drawable/image_test" />

        <RelativeLayout
            android:id="@+id/shop_good1_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x106"
            android:layout_marginStart="@dimen/x12"
            android:layout_marginTop="@dimen/x14"
            android:layout_toEndOf="@id/goods_base_imageview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_base_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x14"
                android:background="@color/colorWhite"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text="安宫黄体酮安宫黄体酮安宫黄体酮安宫黄体酮安宫黄体酮安宫黄体酮"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t11" />

            <RelativeLayout
                android:id="@+id/goods_base_money_rel"
                android:layout_width="@dimen/x106"
                android:layout_height="@dimen/x16"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x10">

                <TextView
                    android:id="@+id/shop_good1_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="参考价"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t9"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/goods_base_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/shop_good1_money_text"
                    android:text="￥18.9"
                    android:textColor="@color/colorE20F12"
                    android:textSize="@dimen/t14" />


            </RelativeLayout>

            <TextView
                android:id="@+id/goods_base_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/goods_base_money_rel"
                android:layout_marginBottom="@dimen/x8"
                android:background="@drawable/shape_cart_backgroud_selected"
                android:text="200G/一盒"
                android:textColor="@color/color04c1ab"
                android:textSize="@dimen/t8" />

            <TextView
                android:id="@+id/goods_base__companay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/goods_base_type"
                android:layout_marginBottom="@dimen/x10"
                android:background="@color/colorWhite"
                android:text="华润三九医药股份有限公司"
                android:textColor="@color/color767676"
                android:textSize="@dimen/t9" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_popup_reduce"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:scaleType="center"
                android:src="@drawable/icon_reduce" />

            <TextView
                android:id="@+id/cart_popup_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/x6"
                android:text="0"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <ImageView
                android:id="@+id/cart_popup_plus"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:scaleType="center"
                android:src="@drawable/icon_plus" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x8"
        android:background="@color/colorF7F7F7" />
</LinearLayout>