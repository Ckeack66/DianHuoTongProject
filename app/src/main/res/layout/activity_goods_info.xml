<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mhky.dianhuotong.shop.activity.GoodsInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/color04c1ab">

        <ImageView
            android:id="@+id/goodsinfo_back"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/icon_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_info_left"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x30"
                android:background="@drawable/selelctor_goods_info_left"
                android:enabled="false"
                android:gravity="center"
                android:text="详情"
                android:textColor="@drawable/selelctor_goods_info_textcolor" />

            <TextView
                android:id="@+id/goods_info_right"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x30"
                android:background="@drawable/selelctor_goods_info_right"
                android:enabled="true"
                android:gravity="center"
                android:text="说明书"
                android:textColor="@drawable/selelctor_goods_info_textcolor" />
        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/goods_info_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite" />

</LinearLayout>
