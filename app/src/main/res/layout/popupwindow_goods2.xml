<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/popupwindow_goods2_item1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/popupwindow_goods2_item1_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x20"
            android:text="默认排序"
            android:textColor="@color/color04c1ab"
            android:textSize="@dimen/t11" />

        <ImageView
            android:id="@+id/popupwindow_goods2_item1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:src="@drawable/icon_choosed" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/colorF7F7F7" />

    <RelativeLayout
        android:id="@+id/popupwindow_goods2_item2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/popupwindow_goods2_item2_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x20"
            android:text="价格排序"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t11" />

        <ImageView
            android:id="@+id/popupwindow_goods2_item2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:src="@drawable/icon_choosed"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colora4717171" />
</LinearLayout>