<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/x34"
    android:background="@color/white"
    android:id="@+id/rl_order_top">

    <TextView
        android:id="@+id/order_head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x16"
        android:text="仁爱大药房"
        android:textColor="@color/color333333"
        android:textSize="@dimen/t14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x16"
        android:gravity="right"
        android:text="待付款"
        android:textColor="@color/color04c1ab"
        android:textSize="@dimen/t12"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/t14"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_go_grey"
        android:layout_toRightOf="@+id/order_head_name"
        android:layout_marginLeft="@dimen/x10"/>

    <View
        style="@style/menu_item_divider_style"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"/>
</RelativeLayout>