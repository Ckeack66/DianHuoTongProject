<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/order_body_goods"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginEnd="@dimen/x14"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/order_body_imageview"
            android:layout_width="@dimen/x84"
            android:layout_height="@dimen/x84"
            android:layout_marginTop="@dimen/x14"
            android:layout_toEndOf="@id/cart_body_check"
            android:src="@drawable/default_pill_case"
            android:layout_marginStart="@dimen/x16"/>

        <RelativeLayout
            android:id="@+id/order_body_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x106"
            android:layout_marginStart="@dimen/x16"
            android:layout_marginTop="@dimen/x14"
            android:layout_toEndOf="@id/order_body_imageview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_ok_body_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x14"
                android:background="@color/colorWhite"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text="安宫黄体酮安宫黄体酮安宫黄体酮安宫黄体酮安宫黄体酮安宫黄体酮"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t11" />

            <RelativeLayout
                android:id="@+id/order_body_money_rel"
                android:layout_width="@dimen/x106"
                android:layout_height="@dimen/x16"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x10">

                <TextView
                    android:id="@+id/order_body_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="参考价"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t9"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/order_ok_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/order_body_money_text"
                    android:text="￥18.9"
                    android:textColor="@color/colorE20F12"
                    android:textSize="@dimen/t14" />


            </RelativeLayout>

            <TextView
                android:id="@+id/order_ok_goods_base_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/order_body_money_rel"
                android:layout_marginBottom="@dimen/x8"
                android:layout_marginEnd="@dimen/x16"
                android:background="@drawable/shape_cart_backgroud_selected"
                android:text=""
                android:textColor="@color/color04c1ab"
                android:textSize="@dimen/t8" />

            <TextView
                android:id="@+id/order_ok_body_companay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/order_ok_goods_base_type"
                android:layout_marginBottom="@dimen/x10"
                android:background="@color/colorWhite"
                android:text="华润三九医药股份有限公司"
                android:textColor="@color/color767676"
                android:textSize="@dimen/t9" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x10"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_popup_reduce"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:scaleType="center"
                android:src="@drawable/icon_reduce"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/order_ok_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/x6"
                android:text="x0"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <ImageView
                android:id="@+id/cart_popup_plus"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:scaleType="center"
                android:src="@drawable/icon_plus"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x8"
        android:background="@color/colorF7F7F7"
        android:layout_marginLeft="@dimen/x22"
        android:layout_marginRight="@dimen/x22"/>
</LinearLayout>