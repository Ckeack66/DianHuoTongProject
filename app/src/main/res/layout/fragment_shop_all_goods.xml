<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.mhky.dianhuotong.shop.fragment.ShopAllGoodsFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/shop_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x6"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/shop_main_child_tab1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/shop_main_tab_txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="默认分类"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t12" />

                    <ImageView
                        android:id="@+id/shop_main_tab_img1"
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/x6"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/x6"
                        android:layout_toEndOf="@id/shop_main_tab_txt1"
                        android:src="@drawable/icon_choose_unselecte" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shop_main_child_tab2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/shop_main_tab_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="默认排序"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t12" />

                    <ImageView
                        android:id="@+id/shop_main_tab_img2"
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/x6"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/x6"
                        android:layout_toEndOf="@id/shop_main_tab_txt2"
                        android:src="@drawable/icon_choose_unselecte" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/colorF7F7F7" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/shop_main_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</FrameLayout>
