<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhky.dianhuotong.activity.ShiYaoQianYanActivity"
    android:background="@color/colorWhite">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/about_our_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x64" />
    <ImageView
        android:id="@+id/about_our_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_logo"
        android:background="@color/colorTransp"
        android:layout_below="@id/about_our_title"
        android:layout_marginTop="@dimen/x30"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/about_our_txt_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x26"
        android:layout_below="@id/about_our_logo"
        android:layout_marginTop="@dimen/x52"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/x4"
            android:layout_height="match_parent"
            android:background="@color/colorB23700"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_title"
            android:textColor="@color/color333333"
            android:layout_marginStart="@dimen/x10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/t16"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_our_txt_title"
        android:layout_marginStart="@dimen/x15"
        android:layout_marginEnd="@dimen/x26"
        android:layout_marginTop="@dimen/x20"
        android:textColor="@color/color676767"
        android:text="@string/about_body"
        android:textSize="@dimen/t14"/>

</RelativeLayout>