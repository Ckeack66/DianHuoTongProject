<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBFBFBF"
    android:orientation="vertical"
    tools:context="com.mhky.dianhuotong.activity.Adress1Activity">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/adress1_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/colorF7F7F7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adress1_image_locate"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x14"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x16"
            android:src="@drawable/icon_mylocation" />

        <TextView
            android:id="@+id/adress1_image_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x6"
            android:layout_toEndOf="@id/adress1_image_locate"
            android:text="定位获取中.."
            android:textColor="@color/color333333"
            android:textSize="@dimen/t12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x16"
            android:text="当前定位城市"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFF4F00">

        <ExpandableListView
            android:id="@+id/adress1_expandblelistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBFBFBF"
            android:divider="@null"
            android:groupIndicator="@null" />

        <com.gjiazhe.wavesidebar.WaveSideBar
            android:id="@+id/adress1_waveslidebar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTransp"
            android:paddingEnd="8dp"
            app:sidebar_lazy_respond="false"
            app:sidebar_max_offset="80dp"
            app:sidebar_position="right"
            app:sidebar_text_alignment="center"
            app:sidebar_text_size="@dimen/t14" />


    </RelativeLayout>


</LinearLayout>
