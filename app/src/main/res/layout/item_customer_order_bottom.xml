<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/x16"
    android:paddingRight="@dimen/x16"
    android:paddingTop="@dimen/x4"
    android:paddingBottom="@dimen/x4"
    android:id="@+id/rl_customer_order_bottom">

    <View
        android:id="@+id/v1"
        style="@style/menu_item_divider_style"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_goods_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x7"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/t11"
        android:textColor="@color/color333333"
        android:text="00.00"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_marginTop="@dimen/x7"
        android:layout_toLeftOf="@+id/tv_goods_amount"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/t11"
        android:textColor="@color/color333333"
        android:text="件商品      合计：￥"/>

    <TextView
        android:id="@+id/tv_goods_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_marginTop="@dimen/x7"
        android:layout_toLeftOf="@+id/tv1"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/t11"
        android:textColor="@color/color333333"
        android:text="共0"/>

    <TextView
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_amount"
        android:layout_alignParentRight="true"
        android:background="@drawable/tv_bg_green"
        android:text="确认收货"
        android:textColor="@color/color04c1ab"
        android:textSize="@dimen/t11"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x16"/>

    <TextView
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_amount"
        android:layout_toLeftOf="@+id/btn_1"
        android:background="@drawable/tv_bg_grey"
        android:text="查看配送"
        android:textColor="@color/color333333"
        android:textSize="@dimen/t11"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x16"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_amount"
        android:layout_toLeftOf="@+id/btn_2"
        android:background="@drawable/tv_bg_grey"
        android:text="申请退款"
        android:textColor="@color/color333333"
        android:textSize="@dimen/t11"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x16"
        android:visibility="gone"/>

    <View
        style="@style/menu_item_divider_style"
        android:layout_below="@+id/btn_1"/>

</RelativeLayout>