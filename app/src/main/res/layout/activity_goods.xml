<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.mhky.dianhuotong.shop.activity.GoodsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/x50"
        android:background="@color/colorF7F7F7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/banner_main_accordion"
                style="@style/BannerDefaultStyle1"
                android:background="@color/colorTransp"
                app:banner_numberIndicatorBackground="@color/colorTransp"
                app:banner_numberIndicatorTextColor="@color/colorTransp"
                app:banner_pointDrawable="@drawable/selector_banner_unequal"
                app:banner_transitionEffect="accordion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/goods_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x16"
                    android:paddingBottom="@dimen/x10"
                    android:paddingTop="@dimen/x10"
                    android:text=""
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x0.5"
                android:background="@color/colorE3E3E3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40"
                    android:layout_marginStart="@dimen/x16"
                    android:gravity="center_vertical"
                    android:text="采购价："
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40"
                    android:gravity="center_vertical"
                    android:text="0.00"
                    android:textColor="@color/colorE20F12"
                    android:textSize="@dimen/t12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x40"
                    android:gravity="center_vertical"
                    android:text="元"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t9" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/goods_base_go_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x6"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <View
                    android:id="@+id/goods_info_title"
                    android:layout_width="@dimen/x4"
                    android:layout_height="@dimen/x16"
                    android:layout_centerVertical="true"
                    android:background="@color/colorB23700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x14"
                    android:layout_toEndOf="@id/goods_info_title"
                    android:text="商品信息"
                    android:textColor="@color/colorB23700" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x12"
                    android:src="@drawable/icon_go_grey" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/colorF7F7F7" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x14"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x12"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品名称："
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />

                        <TextView
                            android:id="@+id/goods_info_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x4"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x12"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="包装规格："
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />

                        <TextView
                            android:id="@+id/goods_info_guige"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x4"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x12"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生产厂家："
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />

                        <TextView
                            android:id="@+id/goods_info_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x4"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x12"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="批准文号："
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />

                        <TextView
                            android:id="@+id/goods_info_pzwh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x4"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x12"
                        android:layout_marginTop="@dimen/x12"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有效期："
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />

                        <TextView
                            android:id="@+id/goods_use_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x4"
                            android:text=""
                            android:textColor="@color/color333333"
                            android:textSize="@dimen/t9" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_marginTop="@dimen/x6"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/goods_shop_img"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_marginStart="@dimen/x14"
                    android:src="@drawable/icon_shop_good_shopimg"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/goods_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_toEndOf="@id/goods_shop_img"
                    android:text=""
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goods_shop_name"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_toEndOf="@id/goods_shop_img"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上架"
                        android:textColor="@color/color707070"
                        android:textSize="@dimen/t8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textColor="@color/colorB23700"
                        android:textSize="@dimen/t8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="种"
                        android:textColor="@color/color707070"
                        android:textSize="@dimen/t8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发货"
                        android:textColor="@color/color707070"
                        android:textSize="@dimen/t8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/colorB23700"
                        android:textSize="@dimen/t8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="万件"
                        android:textColor="@color/color707070"
                        android:textSize="@dimen/t8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价"
                        android:textColor="@color/color707070"
                        android:textSize="@dimen/t8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textColor="@color/colorB23700"
                        android:textSize="@dimen/t8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条"
                        android:textColor="@color/color707070"
                        android:textSize="@dimen/t8" />
                </LinearLayout>

                <TextView
                    android:id="@+id/goods_base_go_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x14"
                    android:background="@drawable/shape_goods_go_shop"
                    android:paddingBottom="@dimen/x4"
                    android:paddingEnd="@dimen/x10"
                    android:paddingStart="@dimen/x10"
                    android:paddingTop="@dimen/x4"
                    android:text="进入店铺"
                    android:textColor="@color/colorB23700"
                    android:textSize="@dimen/t12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x6"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <View
                    android:id="@+id/goods_transfer_title"
                    android:layout_width="@dimen/x4"
                    android:layout_height="@dimen/x16"
                    android:layout_centerVertical="true"
                    android:background="@color/colorB23700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x14"
                    android:layout_toEndOf="@id/goods_transfer_title"
                    android:text="配送信息"
                    android:textColor="@color/colorB23700" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/colorF7F7F7" />

            <TextView
                android:id="@+id/goods_base_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/x10"
                android:paddingStart="@dimen/x14"
                android:paddingTop="@dimen/x10"
                android:text="暂无配送信息！"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x6"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:id="@+id/goods_history_title"
                    android:layout_width="@dimen/x4"
                    android:layout_height="@dimen/x16"
                    android:layout_centerVertical="true"
                    android:background="@color/colorB23700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x14"
                    android:layout_toEndOf="@id/goods_history_title"
                    android:text="采购记录"
                    android:textColor="@color/colorB23700" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计已采购"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2500"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="盒"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t12" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x28"
        android:layout_marginEnd="@dimen/x12"
        android:layout_marginStart="@dimen/x12"
        android:layout_marginTop="@dimen/x10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_base_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:src="@drawable/icon_shop_good_back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:alpha="0.6"
            android:src="@drawable/icon_shop_good_more" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite">
            <RelativeLayout
                android:id="@+id/go_cart_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/go_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x30"
                    android:drawableTop="@drawable/icon_shop_good_car"
                    android:text="购物车"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color707070"
                    android:textSize="@dimen/t12" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x50"
                android:drawableTop="@drawable/icon_shop_good_love"
                android:text="收藏"
                android:textColor="@color/color707070"
                android:textSize="@dimen/t12"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/goods_base_addcart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorFF5305"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/x12" />
    </LinearLayout>

</RelativeLayout>
