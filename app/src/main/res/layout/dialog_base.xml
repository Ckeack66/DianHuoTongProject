<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransp">
    <RelativeLayout
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/x180"
        android:orientation="vertical"
        android:background="@drawable/shape_base_dialog">
        <TextView
            android:id="@+id/base_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t14"
            android:layout_marginTop="@dimen/x17"
            android:text="温馨提示"
            android:background="@color/colorTransp"/>
        <TextView
            android:id="@+id/base_dialog_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x27"
            android:gravity="center_horizontal"
            android:textColor="@color/color707070"
            android:background="@color/colorTransp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/t12"
            android:paddingStart="@dimen/x10"
            android:paddingEnd="@dimen/x10"
            android:text="登陆之后更精彩哦~"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:layout_marginTop="@dimen/x37"
            android:orientation="horizontal"
            android:background="@color/colorTransp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/base_dialog_button_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_base_dialog1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/t12"
                android:text="登陆"/>
            <TextView
                android:id="@+id/base_dialog_button_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_base_dialog2"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/t12"
                android:text="加入店铺"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>