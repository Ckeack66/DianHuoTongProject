            <!--android:inputType="text"/>-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginTop="@dimen/x7"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/invoice_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x38"
            android:layout_below="@id/myselect_zizhi"
            android:layout_marginTop="@dimen/x5"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/invoice_tab_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/invoice_tab1"
                android:textColor="@color/color04c1ab"
                android:textSize="@dimen/x12" />

            <RadioButton
                android:id="@+id/invoice_tab_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/invoice_tab2"
                android:textColor="@color/color333333"
                android:textSize="@dimen/x12" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/invoice_tab_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x3"
            android:layout_below="@id/myselected_tab"
            android:orientation="horizontal">

            <View
                android:id="@+id/invoice_tab_view1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color04c1ab" />

            <View
                android:id="@+id/invoice_tab_view2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorTransp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/invoice_tab_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_below="@id/myselected_tab"
            android:background="@color/colorTransp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x0.5"
                android:layout_centerVertical="true"
                android:background="@color/colorTransp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/invoice_tab_view11"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x0.5"
                    android:layout_weight="1"
                    android:background="@color/colorTransp" />

                <View
                    android:id="@+id/invoice_tab_view21"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x0.5"
                    android:layout_weight="1"
                    android:background="@color/colorBFBFBF" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/invoice_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x4"
        android:background="@color/colorTransp" />

</LinearLayout>
