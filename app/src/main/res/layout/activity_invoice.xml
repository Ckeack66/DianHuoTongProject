<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloreeeeee"
    android:orientation="vertical"
    tools:context="com.mhky.dianhuotong.activity.InvoiceActivity">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/invoice_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x64"
        android:layout_marginTop="@dimen/x7"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginRight="@dimen/x18"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invoice_shop_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/invoice_company_name"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x1"
                android:background="@color/colorBFBFBF" />

            <TextView
                android:id="@+id/invoice_shop_adress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/invoice_company_adress"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />


