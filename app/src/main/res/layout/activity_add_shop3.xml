<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloreeeeee"
    android:orientation="vertical"
    tools:context="com.mhky.dianhuotong.activity.AddShop3Activity">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/addshop3_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x12"
        android:background="@color/coloreeeeee"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/x15"
            android:layout_gravity="center_vertical"
            android:background="@color/color04c1ab" />

        <TextView
            android:id="@+id/shop3_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x13"
            android:background="@color/coloreeeeee"
            android:text="正在加入：济南海州大药房有限公司"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x13"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginStart="@dimen/x15"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x19"
                android:layout_gravity="center_vertical"
                android:text="姓名："
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <EditText
                android:id="@+id/shop3_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginStart="@dimen/x12"
                android:background="@null"
                android:maxLength="11"
                android:padding="@dimen/text_pading"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBFBFBF"
                android:textSize="@dimen/t12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/colorBFBFBF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginStart="@dimen/x15"
            android:background="@color/colorWhite">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x19"
                android:layout_centerVertical="true"
                android:text="职位："
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <RadioGroup
                android:id="@+id/shop3_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/add_shop_boss"
                    android:layout_width="@dimen/x56"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/x35"
                    android:layout_marginStart="@dimen/x6"
                    android:button="@drawable/selector_personinfo_radiobutton"
                    android:paddingStart="@dimen/x3"
                    android:text="店长"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />

                <RadioButton
                    android:id="@+id/add_shop_worker"
                    android:layout_width="@dimen/x56"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/selector_personinfo_radiobutton"
                    android:paddingStart="@dimen/x3"
                    android:text="店员"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/t12" />
            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/colorBFBFBF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginStart="@dimen/x15"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x19"
                android:layout_gravity="center_vertical"
                android:text="服务专员："
                android:textColor="@color/color333333"
                android:textSize="@dimen/t12" />

            <EditText
                android:id="@+id/shop3_myweiter_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginStart="@dimen/x12"
                android:background="@null"
                android:hint="@string/add_shop_finish_mywaiter_txt"
                android:inputType="number"
                android:lines="4"
                android:maxLength="11"
                android:padding="@dimen/text_pading"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBFBFBF"
                android:textSize="@dimen/t9" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/colorBFBFBF" />
    </LinearLayout>

    <TextView
        android:id="@+id/shop3_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x33"
        android:layout_marginBottom="@dimen/x36"
        android:layout_marginEnd="@dimen/x50"
        android:layout_marginStart="@dimen/x50"
        android:layout_marginTop="@dimen/x100"
        android:background="@drawable/shape_login_button"
        android:gravity="center"
        android:text="@string/add_shop_finish_button"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/t12" />
</LinearLayout>
