<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransp"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colora4717171" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_marginBottom="@dimen/x50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingEnd="@dimen/x8"
                android:paddingStart="@dimen/x16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品牌选择"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t12" />

                    <ImageView
                        android:id="@+id/popupwindow_search_type_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="center"
                        android:src="@drawable/icon_go_down" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x8"
                        android:layout_toStartOf="@id/popupwindow_search_type_down"
                        android:text="全部"
                        android:textColor="@color/color707070"
                        android:textSize="@dimen/t11" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/popupwindow_search_type_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="厂家选择"
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/t12" />

                    <ImageView
                        android:id="@+id/popupwindow_search_type_down1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="center"
                        android:src="@drawable/icon_go_down" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x8"
                        android:layout_toStartOf="@id/popupwindow_search_type_down1"
                        android:text="全部"
                        android:textColor="@color/color707070"
                        android:textSize="@dimen/t11" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/popupwindow_search_type_body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhite">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBFBFBF"
                android:gravity="center"
                android:text="重置"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color04c1ab"
                android:text="确认"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>