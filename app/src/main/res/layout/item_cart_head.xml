<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:id="@+id/cart_head_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/colorF7F7F7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x34">

        <FrameLayout
            android:id="@+id/cart_head_check"
            android:layout_width="@dimen/x34"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x16">

            <CheckBox
                android:id="@+id/cart_head_check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:button="@drawable/selector_balance_pay_choose"
                android:clickable="false" />
        </FrameLayout>

        <TextView
            android:id="@+id/cart_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/cart_head_check"
            android:text="仁爱大药房"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x8"
            android:layout_toEndOf="@id/cart_head_name"
            android:background="@drawable/shape_cart_bq"
            android:paddingBottom="@dimen/x2"
            android:paddingEnd="@dimen/x4"
            android:paddingStart="@dimen/x4"
            android:paddingTop="@dimen/x2"
            android:text="500元起配"
            android:textColor="@color/color04c1ab" />

        <FrameLayout
            android:id="@+id/cart_head_go"
            android:layout_width="@dimen/x34"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_go" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/colorF7F7F7" />


</LinearLayout>