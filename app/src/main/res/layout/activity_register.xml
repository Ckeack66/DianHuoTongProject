<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ymky.dianhuotong.activity.RegisterActivity">

    <com.ymky.dianhuotong.custom.DiaHuiTongBaseTitleBar
        android:id="@+id/register_titlebar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        ></com.ymky.dianhuotong.custom.DiaHuiTongBaseTitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:layout_below="@id/register_titlebar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/icon_phone"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBFBFBF"
                android:hint="@string/register_phone"
                android:padding="@dimen/text_pading"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:layout_weight="5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorBFBFBF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/icon_lock"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBFBFBF"
                android:hint="@string/register_phone_code"
                android:padding="@dimen/text_pading"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:layout_weight="5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/register_get_phone_code"
                android:textColor="@color/color04c1ab"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_register_getcode"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorBFBFBF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/icon_lock"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBFBFBF"
                android:hint="@string/register_phone_code"
                android:padding="@dimen/text_pading"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:layout_weight="5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/register_get_phone_code"
                android:textColor="@color/color04c1ab"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_register_getcode"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorBFBFBF"/>

    </LinearLayout>



</RelativeLayout>
