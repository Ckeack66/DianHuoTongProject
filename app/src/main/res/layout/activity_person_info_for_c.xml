<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mhky.yaolinwang.activity.PersonInfoForCActivity"
    android:background="@color/white">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/personinfo_for_c_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_below="@id/personinfo_for_c_title">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/person_header"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/person_info_image"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_person_header"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFffffff"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/colorCDCDCD" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/person_username"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/person_info_realname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/colorCDCDCD" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="联系方式"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/person_info_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/colorCDCDCD" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x50"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="收货地址"
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/person_info_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="@dimen/t14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="@color/colorCDCDCD" />
    </LinearLayout>

</RelativeLayout>
