<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/popupwindow_goods1_child_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginEnd="@dimen/x14"
        android:layout_marginStart="@dimen/x14">

        <TextView
            android:id="@+id/popupwindow_goods_type_child_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清热解毒"
            android:textColor="@color/color333333"
            android:textSize="@dimen/t11" />

        <TextView
            android:id="@+id/popupwindow_goods_type_child_number"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/x16"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_popupwindow_goods_type_parent"
            android:gravity="center"
            android:text="201234"
            android:textSize="@dimen/t9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_alignParentBottom="true"
            android:background="@color/colorF7F7F7" />
    </RelativeLayout>


</FrameLayout>