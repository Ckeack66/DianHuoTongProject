<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorE6E6E6"
    tools:context="com.mhky.yaolinwang.order.activity.CustomerOrdersActivity">

    <com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar
        android:id="@+id/customer_order_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentTop="true"></com.mhky.dianhuotong.custom.viewgroup.DianHuoTongBaseTitleBar>

    <RadioGroup
        android:id="@+id/my_selected_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:layout_below="@id/customer_order_title_bar"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/myselected_tab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="全部"
            android:textColor="@color/color04c1ab"
            android:textSize="@dimen/x12" />

        <RadioButton
            android:id="@+id/myselected_tab_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x12" />

        <RadioButton
            android:id="@+id/myselected_tab_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="待发货"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x12" />

        <RadioButton
            android:id="@+id/myselected_tab_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="待收货"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x12" />

        <RadioButton
            android:id="@+id/myselected_tab_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="待评价"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x12" />

        <RadioButton
            android:id="@+id/myselected_tab_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.36"
            android:button="@null"
            android:gravity="center"
            android:text="退款/售后"
            android:textColor="@color/color333333"
            android:textSize="@dimen/x12" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/my_selected_tab_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@id/my_selected_tab"
        android:orientation="horizontal"
        android:background="@color/colorBFBFBF">

        <View
            android:id="@+id/myselected_tab_view1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color04c1ab" />

        <View
            android:id="@+id/myselected_tab_view2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTransp" />

        <View
            android:id="@+id/myselected_tab_view3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTransp" />

        <View
            android:id="@+id/myselected_tab_view4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTransp" />

        <View
            android:id="@+id/myselected_tab_view5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTransp" />

        <View
            android:id="@+id/myselected_tab_view6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.36"
            android:background="@color/colorTransp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_selected_tab_line" />

</RelativeLayout>
